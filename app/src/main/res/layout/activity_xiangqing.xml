<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xiangqing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="helloworld.example.com.jingdong.acticity.XiangqingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xq_back"
            android:src="@drawable/back1"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/xq_img"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/xq_tv_title"
        android:text="123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/xq_tv_subhead"
        android:text="123"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xq_tv_price"
        android:text="123"
        android:textSize="25sp"
        android:textColor="#ff00"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xq_tv_jia"
            android:layout_weight="1"
            android:text="加入购物车"
            android:gravity="center"
            android:background="#FFB90F"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/xq_tv_buy"
            android:layout_weight="1"
            android:text="立即购买"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#ff00"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>



</LinearLayout>
